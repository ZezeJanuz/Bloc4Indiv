<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=System.Runtime">

  <!-- ===== Colors / Brushes / Font / Sizes ===== -->
  <Color x:Key="PrimaryColor">#4F46E5</Color>
  <Color x:Key="PrimaryColorDark">#4338CA</Color>
  <Color x:Key="PrimaryColorLight">#6366F1</Color>

  <Color x:Key="SurfaceColor">#F7F9FC</Color>
  <Color x:Key="CardColor">#FFFFFFFF</Color>
  <Color x:Key="TextColor">#111827</Color>
  <Color x:Key="SubtleTextColor">#374151</Color> <!-- un peu plus sombre pour le contraste -->
  <Color x:Key="BorderColor">#D1D5DB</Color>
  <Color x:Key="RowAltColor">#FAFAFB</Color>

  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryColorDark}"/>
  <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryColorLight}"/>

  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
  <SolidColorBrush x:Key="SubtleTextBrush" Color="{StaticResource SubtleTextColor}"/>
  <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}"/>
  <SolidColorBrush x:Key="RowAltBrush" Color="{StaticResource RowAltColor}"/>


  <FontFamily x:Key="AppFont">Segoe UI</FontFamily>
  <sys:Double x:Key="BaseFontSize">14</sys:Double>
  <sys:Double x:Key="TitleFontSize">24</sys:Double>
  <sys:Double x:Key="ControlFontSize">15</sys:Double>
  <sys:Double x:Key="SmallFontSize">13</sys:Double>

  <!-- ===== Global Window/Text ===== -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
    <Setter Property="UseLayoutRounding" Value="True"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
  </Style>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
  </Style>

  <!-- ===== Button (plus grand/visible) ===== -->
  <Style TargetType="Button">
    <Setter Property="FontSize" Value="{StaticResource ControlFontSize}"/>
    <Setter Property="Padding" Value="16,10"/>
    <Setter Property="Margin" Value="0,0,10,0"/>
    <Setter Property="MinHeight" Value="40"/>
    <Setter Property="MinWidth" Value="96"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="bd"
                  Background="{TemplateBinding Background}"
                  CornerRadius="8"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.55"/>
              <Setter TargetName="bd" Property="Background" Value="#FFD1D5DB"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Outline variant (mÃªmes dimensions) -->
  <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="1.4"/>
  </Style>

  <!-- ===== TextBox (plus grand) ===== -->
  <Style TargetType="TextBox">
    <Setter Property="FontSize" Value="{StaticResource ControlFontSize}"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="Margin" Value="0,0,0,12"/>
    <Setter Property="MinHeight" Value="38"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Background" Value="White"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="TextBox">
          <Border x:Name="bd" CornerRadius="6"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <ScrollViewer x:Name="PART_ContentHost"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
              <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
              <Setter TargetName="bd" Property="BorderThickness" Value="1.6"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ===== ComboBox (plus grand) ===== -->
  <Style TargetType="ComboBox">
    <Setter Property="FontSize" Value="{StaticResource ControlFontSize}"/>
    <Setter Property="Margin" Value="0,0,0,12"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="MinHeight" Value="38"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Background" Value="White"/>
  </Style>

  <!-- ===== GroupBox (card) ===== -->
  <Style TargetType="GroupBox">
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="GroupBox">
          <Grid>
            <Border Margin="10"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1">
              <Border.Effect>
                <DropShadowEffect Color="#22000000" BlurRadius="16" ShadowDepth="2"/>
              </Border.Effect>
              <DockPanel Margin="16">
                <Border DockPanel.Dock="Top" Background="Transparent" Padding="0,0,0,10">
                  <TextBlock Text="{TemplateBinding Header}"
                             FontWeight="SemiBold"
                             FontSize="{StaticResource SmallFontSize}"
                             Foreground="{StaticResource SubtleTextBrush}"/>
                </Border>
                <ContentPresenter/>
              </DockPanel>
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ===== DataGrid (lignes plus hautes/texte plus grand) ===== -->
  <Style TargetType="DataGrid">
    <Setter Property="FontSize" Value="{StaticResource ControlFontSize}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="GridLinesVisibility" Value="None"/>
    <Setter Property="HeadersVisibility" Value="All"/>
    <Setter Property="RowBackground" Value="White"/>
    <Setter Property="AlternatingRowBackground" Value="{StaticResource RowAltBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="RowHeight" Value="36"/>
    <Setter Property="CellStyle">
      <Setter.Value>
        <Style TargetType="DataGridCell">
          <Setter Property="Padding" Value="10,6"/>
          <Setter Property="FontSize" Value="{StaticResource ControlFontSize}"/>
        </Style>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="DataGridColumnHeader">
    <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
    <Setter Property="Background" Value="#F3F4F6"/>
    <Setter Property="Foreground" Value="{StaticResource SubtleTextBrush}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    <Setter Property="BorderThickness" Value="0,0,0,1"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="Height" Value="34"/>
  </Style>

  <Style TargetType="DataGridRow">
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="ValidationErrorTemplate" Value="{x:Null}"/>
    <Setter Property="MinHeight" Value="36"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="DataGridRow">
          <Border x:Name="bd" BorderBrush="Transparent" BorderThickness="1">
            <DataGridCellsPresenter/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter TargetName="bd" Property="Background" Value="#EEF2FF"/>
              <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Background" Value="#F5F3FF"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>